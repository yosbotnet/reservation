{
  "name": "medical-clinic-backend",
  "version": "1.0.0",
  "description": "Backend for Medical Clinic Management System",
  "main": "src/index.js",
  "scripts": {
    "start": "node --max-old-space-size=512 build/index.js",
    "dev": "nodemon src/index.js",
    "build": "babel src -d build --copy-files --out-file-extension .js && cp .env build/.env",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "setup-test-db": "node scripts/setup-test-db.js",
    "pretest": "npm run setup-test-db",
    "test": "cross-env NODE_ENV=test DATABASE_URL=postgresql://postgres:postgres@localhost:5432/clinica_test JWT_SECRET=test-secret jest --detectOpenHandles --forceExit"
  },
  "dependencies": {
    "@prisma/client": "^6.2.1",
    "babel-plugin-inline-dotenv": "^1.7.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.5",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.4",
    "@babel/core": "^7.23.4",
    "@babel/plugin-transform-modules-commonjs": "^7.26.3",
    "@babel/preset-env": "^7.26.7",
    "@types/jest": "^29.5.14",
    "babel-jest": "^29.7.0",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prisma": "^6.2.1",
    "supertest": "^7.0.0"
  }
}
